#===========Aliases============
alias open='xdg-open'
alias myneofetch='neofetch | lolcat'

alias ls="lsd"
alias ll="lsd -l"
alias la="lsd -a"
alias lla="lsd -al"
alias lal="lsd -al"
alias grep='grep -i --color=auto'
alias cp="cp -r"
alias rm="rm -rf"

alias myclock="tty-clock -cb"
alias gitpush='git commit -a -m "[Empty]" && git push origin main'
alias gitpull='git pull origin main'
